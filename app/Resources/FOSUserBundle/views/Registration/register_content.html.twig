{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-6 form-left col-md-offset-3">
	<div class="form-header"><h4>Already a member? Sign in: <a href="{{ path('fos_user_security_login') }}">Login</a></h4></div>
	<form name="fos_user_registration_form" method="post" action="{{ path('fos_user_registration_register') }}" class="form-horizontal" role="form">
	    <div id="fos_user_registration_form">
	    	<div class="form-group">
	    		{{ form_label(form.email, 'form.email'|trans, {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
	    		<div class="col-sm-12">
	    			{{ form_widget(form.email, { 'attr': {'class': 'form-control'|trans } }) }}
	    		</div>{{ form_errors(form.email) }}
	    	</div>
			<div class="form-group">
				{{ form_label(form.username, 'form.username'|trans, {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
				<div class="col-sm-12">
					{{ form_widget(form.username, { 'attr': {'class': 'form-control'|trans } }) }}
				</div>{{ form_errors(form.username) }}
			</div>
			<div class="form-group">
				{{ form_label(form.plainPassword.first, 'form.password'|trans, {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
				<div class="col-sm-12">
					{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'|trans } }) }}
				</div>{{ form_errors(form.plainPassword.first) }}
			</div>
			<div class="form-group">
				{{ form_label(form.plainPassword.second, 'form.password_confirmation'|trans, {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
				<div class="col-sm-12">
					{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'|trans } }) }}
				</div>{{ form_errors(form.plainPassword.second) }}
			</div>
			<div class="form-group">
				{{ form_label(form.paypal, 'Paypal Email', {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
				<div class="col-sm-12">
					{{ form_widget(form.paypal, { 'attr': {'class': 'form-control' } }) }}
				</div>{{ form_errors(form.paypal) }}
			</div>
			{{ form_rest(form) }}
		</div>
	    <div class="text-center" style="margin-top:40px;">
	        <button type="submit" class="btn btn-primary">Create your account</button>
	    </div>
	</form>
 </div><!-- col-md-6 -->

<div class="clearfix"></div>

