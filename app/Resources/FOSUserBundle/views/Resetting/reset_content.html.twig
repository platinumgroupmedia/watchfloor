{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-6 form-left col-md-offset-3">

	<div class="form-header"><h4>New password</h4></div>

	<div id="fos_user_resetting_form">
		{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'form-horizontal' } }) }}

		    <div class="form-group">

	    		{{ form_label(form.plainPassword.first, 'form.password'|trans, {'label_attr': {'class': 'col-sm-12 control-label'}}) }}

				<div class="col-sm-12">
	    		{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control' } }) }}
	    		{{ form_errors(form.plainPassword.first) }}
	    		</div>
	    	</div>

		    <div class="form-group">
	    		{{ form_label(form.plainPassword.second, 'form.password_confirmation'|trans, {'label_attr': {'class': 'col-sm-12 control-label'}}) }}

				<div class="col-sm-12">
	    		{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control' } }) }}
	    		{{ form_errors(form.plainPassword.second) }}
		    	</div>
		    </div>

		    {{ form_rest(form) }}

		    <div class="text-center" style="margin-top:40px;">
		        <button type="submit" class="btn btn-primary">{{ 'resetting.reset.submit'|trans }}</button>
		    </div>
	    {{ form_end(form) }}
    </div>
</div>

<div class="clearfix"></div>
