{% trans_default_domain 'FOSUserBundle' %}



<div class="col-md-6 form-left col-md-offset-3">


	{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal' } }) }}
	    
	    <div id="fos_user_change_password_form">
	    
	    	<div class="form-group">
	    		{{ form_label(form.current_password, 'form.current_password'|trans, {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
	    		<div class="col-sm-12"> 
	    			{{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'form.current_password'|trans } }) }}
	    		{{ form_errors(form.current_password) }}
	    	</div>
	    	</div>


			<div class="form-group">
				{{ form_label(form.plainPassword.first, 'form.password'|trans, {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
				<div class="col-sm-12">
					{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
				{{ form_errors(form.plainPassword.first) }}
			</div>
			</div>

			<div class="form-group">
				{{ form_label(form.plainPassword.second, 'form.password_confirmation'|trans, {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
				<div class="col-sm-12"> 
					{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans } }) }}
				{{ form_errors(form.plainPassword.second) }}
			</div>
			</div>
			{{ form_rest(form) }}
		</div>
		
		<div class="clearfix"></div>
	   
		<div class="text-center" style="margin-top:40px;">
		    <button type="submit" class="btn btn-primary">{{ 'change_password.submit'|trans }}</button>
		</div>
	{{ form_end(form) }}
</div>

<div class="clearfix"></div>