{% extends 'intermediate.html.twig' %}

{% block title %}Watchfloor - Invoices{% endblock %}

{% block body %}

	<div class="row">

		<div class="panel panel-default">
			<div class="panel-heading"><strong>INVOICES</strong></div>
            <div class="panel-body" style="padding:0;">
		    	<div class="none">
		            <table data-toggle="table" class="table table-bordred">
		            <thead>
		            	<tr>
							<th>ID</th>
		                	<th>DATE</th>
		                	<th>ACTIONS</th>
		                </tr>
		            </thead>

		            <tbody>
			{% if pagination|length %}
				{% for invoice in pagination %}
			

		            <tr>
		            	<td>
		            		{% if not invoice.viewed %}<img src="{{ asset('img/new.gif') }}" style="float:left;"/>{% endif %}<div class="">{{ invoice.id }}</div>
		            	</td>
						
						<td><div class="">{{ invoice.created|date("Y-m-d") }}</div></td> 

						<td><div class=""><a href="{{ path('admin_view_invoice', {"id" : invoice.id}) }}">View</a></div></td>

					</tr>

				{% endfor %}
			{% else %}
					<tr>
						<td>
							<div class="">No Invoices</div>
						</td>
					</tr>
			{% endif %}


			           	</tbody>
			           </table>
			        </div>
				</div><!-- panel-body -->
			    </div><!-- panel -->


	</div><!--row -->


	
	<div class="clearfix"></div>
	
	<ul class="pagination pull-right">
      {{ knp_pagination_render(pagination) }}
    </ul>
    
    <div class="clearfix"></div>

{% endblock body %}