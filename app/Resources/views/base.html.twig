<!DOCTYPE HTML>
{% trans_default_domain 'AppBundle' %}
<html lang="en" class="app">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0 minimal-ui"/>
		<meta name="apple-mobile-web-app-title" content="My App"> <!-- New in iOS6 -->
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-touch-fullscreen" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black">
		
		<link href="{{ asset('icons/favicon.ico') }}" rel="icon" type="image/x-icon" />
		<link href="icons/apple-touch-icon.png" rel="apple-touch-icon" type="image/png">
		<link href="icons/touch-icon-ipad.png" rel="apple-touch-icon" sizes="72x72">
		<link href="icons/touch-icon-iphone4.png" rel="apple-touch-icon" sizes="114x114">
		<link href="icons/startup.png" rel="apple-touch-startup-image">
		
		<title>{% block title %}Watchfloor{% endblock title %}</title>
		
		{% block stylesheets %}
		
			<!-- Bootstrap core CSS -->
		    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
		    <link href="{{ asset('css/font-awesome.css') }}" rel="stylesheet">
		
		    <!-- Custom styles for this template -->
		    <link href="{{ asset('css/theme.css') }}" rel="stylesheet">

		{% endblock stylesheets %}
					
	</head>

	<body class="">
		<div id="preloader">
			{% block preloader %}
			
				<div id="status">
			    	<p class="center-text">
						Loading the content...
			            <em>Loading depends on your connection speed!</em>
			        </p>
			    </div>
		    
		    {% endblock preloader %}
		</div>


		<div class="all-elements">
			<!-- CONTENT GOES HERE -->
			{% block navi %}{% endblock navi %}{# The navigation block #}
			{% block head %}{% endblock head %}
			{% block content %}
			
				<div class="inner-block">
					<div class="container">
						{% block flash %}
							{% if app.session.flashbag.peekAll|length > 0 %}
								{% for type, messages in app.session.flashbag.all %}
							    	{% for message in messages %}
							        	<div class="alert alert-{{type}}" id="flash-message">
											<button type="button" class="close" data-dismiss="alert">x</button>
							            	{{ message|trans }}
							            </div>
							        {% endfor %}
							    {% endfor %}
							{% endif %}
						{% endblock flash %}
						{% block body %}{% endblock body %}
					</div>
				</div>
				
			{% endblock content %}
			{% block footer %}{% endblock footer %}
			
			<!-- END CONTENT -->
		</div><!-- all-elements -->
		
		{% block javascripts %}
		
			<!-- Bootstrap core JavaScript ================================================== -->
			<!-- Placed at the end of the document so the pages load faster -->
			<script src="{{ asset('https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js') }}"></script>
			<script src="{{ asset('js/bootstrap.js') }}"></script>
			<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
			<!--[if lt IE 9]>
				<script src="{{ asset('https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js') }}"></script>
				<script src="{{ asset('https://oss.maxcdn.com/respond/1.4.2/respond.min.js') }}"></script>
			<![endif]-->
			<script src="{{ asset('js/custom.js') }}"></script>	
			
		{% endblock javascripts %}
	</body>
</html>
